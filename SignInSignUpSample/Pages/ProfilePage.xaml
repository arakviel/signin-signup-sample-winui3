<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="SignInSignUpSample.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SignInSignUpSample.Pages"
    xmlns:l="using:WinUI3Localizer"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="32">
        <StackPanel Spacing="16">
            <PersonPicture
                x:Name="ProfilePicture"
                Width="120"
                Height="120" />

            <TextBlock
                x:Name="TitleText"
                l:Uids.Uid="ProfilePage_TitleText"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}" />

            <Grid
                ColumnDefinitions="Auto, *"
                ColumnSpacing="12"
                RowDefinitions="Auto, Auto, Auto"
                RowSpacing="12">

                <TextBlock
                    x:Name="UsernameLabel"
                    l:Uids.Uid="ProfilePage_UsernameLabel"
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Name="UserNameTextBlock"
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource BodyTextBlockStyle}" />

                <TextBlock
                    x:Name="EmailLabel"
                    l:Uids.Uid="ProfilePage_EmailLabel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Name="EmailTextBlock"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource BodyTextBlockStyle}" />

                <TextBlock
                    x:Name="FullNameLabel"
                    l:Uids.Uid="ProfilePage_FullNameLabel"
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Name="FullNameTextBlock"
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource BodyTextBlockStyle}" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
